@{
    ViewData["Title"] = "Account";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-12 m-t-40">
            <div class="login-form-container">
                <h5 class="sidebar__title">Login</h5>
                <div class="login-register-form">
                    <div class="form-box__single-group">
                        <label for="login-email">Email address *</label>
                        <input type="text" id="login-email" placeholder="Enter Email" required>
                    </div>
                    <div class="form-box__single-group">
                        <label for="login-password">Password *</label>
                        <div class="password__toggle">
                            <input type="password" id="login-password" placeholder="Enter password" required>
                        </div>
                    </div>
                    <button class="btn btn--box btn--medium btn--radius btn--black btn--black-hover-green btn--uppercase font--semi-bold m-t-40" id="btnLogin">LOGIN</button>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-12 m-t-40">
            <div class="login-form-container">
                <h5 class="sidebar__title">Register</h5>
                <div class="login-register-form">
                    <div class="form-box__single-group">
                        <label for="form-register-username">Name *</label>
                        <input type="text" id="register-name" placeholder="Name">
                    </div>
                    <div class="form-box__single-group">
                        <label for="form-uregister-sername-email">Email address *</label>
                        <input type="email" id="register-email" placeholder="Enter email" required>
                    </div>
                    <div class="form-box__single-group">
                        <label for="form-uregister-sername-email">Date of birth *</label>
                        <input type="date" id="register-dob" placeholder="Enter date of birth" required>
                    </div>
                    <div class="form-box__single-group m-b-20">
                        <label for="form-register-username-password">Password *</label>
                        <div class="password__toggle">
                            <input type="password" id="register-password" placeholder="Enter password" required>
                        </div>
                    </div>
                    <button class="btn btn--box btn--medium btn--radius btn--black btn--black-hover-green btn--uppercase font--semi-bold" id="btnRegister">REGISTER</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/Home/Account.js"></script>