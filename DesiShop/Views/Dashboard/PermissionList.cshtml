
@{
    ViewData["Title"] = "Permission List";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">

            </div>
            <div class="content-header-right text-md-right col-md-3 col-12 d-md-block d-none">
                <div class="form-group breadcrumb-right">

                </div>
            </div>
        </div>
        <div class="content-body">

            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Create Permission</h4>
                            </div>
                            <div class="card-body">
                                <div class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="permission-title">Permission Title</label>
                                                <input type="text" id="permission-title" class="form-control" placeholder="Permission Title" />
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="icon-code">Icon Code</label>
                                                <input type="text" id="icon-code" class="form-control" placeholder="Icon Code" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="parentmenu">Parent Permission</label>
                                                <select id="parentmenu" class="form-control">
                                                    <option value="Select Parent Permission" selected>Select Parent Permission</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="ismenuitem">Is Menu Item</label>
                                                <select id="ismenuitem" class="form-control">
                                                    <option value="true">Yes</option>
                                                    <option value="false">No</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-12 col-12">
                                            <div class="form-group">
                                                <label for="permission-url">Permission Url</label>
                                                <input type="text" id="permission-url" class="form-control" placeholder="Permission Url" />
                                            </div>
                                        </div>

                                        <div class="col-12 text-center">
                                            <button align="center" id="btnsubmit" class="btn btn-primary mr-1">Submit</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div>&nbsp;</div>

            <section class="app-user-list">

                <div class="card">
                    <div class="card-datatable table-responsive pt-0">
                        <table class="user-list-table table" id="datatables">
                            <thead class="thead-light">
                                <tr>

                                    <th>Permission Title</th>
                                    <th>Parent Permission</th>
                                    <th>Icon</th>
                                    <th>Url</th>
                                    <th>IsMenuItem</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="permissionList"></tbody>

                        </table>
                    </div>

                </div>
                <!-- list section end -->
            </section>
            <div class="modal fade text-left" id="editPermissionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel33">
                                Update Permission
                            </h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Update Permission</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="form">
                                                <div class="row">
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group">
                                                            <label for="update-permission-title">Permission Title</label>
                                                            <input type="text" id="update-permission-title" class="form-control" placeholder="Permission Title" />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group">
                                                            <label for="update-icon-code">Icon Code</label>
                                                            <input type="text" id="update-icon-code" class="form-control" placeholder="Icon Code" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group">
                                                            <label for="update-parentmenu">Parent Permission</label>
                                                            <select id="update-parentmenu" class="form-control">
                                                                <option value="Select Parent Permission" selected>Select Parent Permission</option>

                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group">
                                                            <label for="update-ismenuitem">Is Menu Item</label>
                                                            <select id="update-ismenuitem" class="form-control">
                                                                <option value="true">Yes</option>
                                                                <option value="false">No</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12 col-12">
                                                        <div class="form-group">
                                                            <label for="permission-url">Permission Url</label>
                                                            <input type="text" id="update-permission-url" class="form-control" placeholder="Permission Url" />
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>



                                        </div>
                                        </div>
                                        </div>
                                        </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


    </div>
</div>


<!-- END: Content-->

<div class="sidenav-overlay"></div>
<div class="drag-target"></div>

<script src="/dashboard/app-assets/vendors/js/vendors.min.js"></script>
<script src="/js/cookie.js"></script>
<script src="/js/PermissionList.js"></script>


