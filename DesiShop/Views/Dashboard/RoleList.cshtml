
@{
    ViewData["Title"] = "User Role";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">

            </div>
            <div class="content-header-right text-md-right col-md-3 col-12 d-md-block d-none">
                <div class="form-group breadcrumb-right">

                </div>
            </div>
        </div>
        <div class="content-body">

            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Create User Role</h4>
                            </div>
                            <div class="card-body">
                                <div class="form">
                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="form-group">
                                                <label for="role-name">Role Name</label>
                                                <input type="text" id="role-name" class="form-control" placeholder="Role Name" />
                                            </div>
                                        </div>

                                        <div class="col-12 text-center">
                                            <button align="center" id="btnsubmit" class="btn btn-primary mr-1">Submit</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div>&nbsp;</div>

            <section class="app-user-list">

                <div class="card">
                    <div class="card-datatable table-responsive pt-0">
                        <table class="user-list-table table" id="datatables">
                            <thead class="thead-light">
                                <tr>

                                    <th>Role Name</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="roleList"></tbody>

                        </table>
                    </div>

                </div>
                <!-- list section end -->
            </section>

            <div class="modal fade text-left" id="editRolePermissionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel33">Edit Role Permission</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div>
                            <div class="modal-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <td>Permission Title</td>
                                            <td>Parent Permission</td>
                                            <td>Action</td>

                                        </tr>

                                    </thead>
                                    <tbody id="tblPermissions">
                                    </tbody>
                                    
                                </table>
                                  
                                </div>
                              
                            
                            
                        </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="SavePermissions">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            
            <div class="modal fade text-left" id="editRoleModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel33">Update Role</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div>
                            <div class="modal-body">
                                <div class="form">
                                    <div class="row">
                                        <div class="col-md-12 col-12">
                                            <div class="form-group">
                                                <label for="update-role-name">Role Name</label>
                                                <input type="text" id="update-role-name" class="form-control" placeholder="Role Name" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                  
                                </div>
                              
                            
                            
                        </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>


<!-- END: Content-->

<div class="sidenav-overlay"></div>
<div class="drag-target"></div>

<script src="/dashboard/app-assets/vendors/js/vendors.min.js"></script>
<script src="/js/UserRole.js"></script>

