@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<script src="https://cdn.tiny.cloud/1/44p22ufzci97343qpz8nbvv8rprzdvr8p0yl6xjy9vr3dml1/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title text-center" style="margin-left: 43%;">Add Product</h4>
                            </div>
                            <div class="card-body">
                                <div class="media mb-2 d-flex flex-column align-items-center">
                                    <img src="/UserFiles/person.png" alt="users avatar" class="user-avatar users-avatar-shadow rounded mr-2 my-25 cursor-pointer" id="product-image" height="90" width="90" />
                                    <div class="media-body mt-50">
                                        <div class="col-12 d-flex mt-1 px-0">
                                            <label class="btn btn-primary mr-75 mb-0" for="change-picture">
                                                <span class="d-none d-sm-block">Change</span>
                                                <input class="form-control" type="file" id="change-picture" hidden accept="image/png, image/jpeg, image/jpg" />
                                                <span class="d-block d-sm-none">
                                                    <i class="mr-0" data-feather="edit"></i>
                                                </span>
                                            </label>
                                            <button class="btn btn-outline-secondary d-none d-sm-block">Remove</button>
                                            <button class="btn btn-outline-secondary d-block d-sm-none">
                                                <i class="mr-0" data-feather="trash-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="protitle">Product Title</label>
                                                <input type="text" class="form-control dt-full-name" id="protitle" placeholder="Enter Product Title" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="proprice">Price</label>
                                                <input type="number" class="form-control dt-full-name" id="proprice" placeholder="Enter Price" />
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="protitle">Purchase Price</label>
                                                <input type="text" class="form-control dt-full-name" id="protitle" placeholder="Enter Product Title" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="proprice">shipping Cost</label>
                                                <input type="number" class="form-control dt-full-name" id="proprice" placeholder="Enter Price" />
                                            </div>

                                        </div>
                                    </div>








                                    <div class="row">
                                        <div class="col-md-5 col-5">
                                            <div class="form-group">
                                                <label class="form-label" for="protitle">Varient Title</label>
                                                <input type="text" class="form-control dt-full-name" name="vTitle[]" id="protitle" placeholder="Enter Product Title" />
                                            </div>
                                        </div>
                                        <div class="col-md-5 col-5">
                                            <div class="form-group">
                                                <label class="form-label" for="proprice">Varient Price</label>
                                                <input type="number" class="form-control dt-full-name" id="proprice" name="vPrice[]" placeholder="Enter Price" />
                                            </div>

                                        </div>
                                        <div class="col-md-2 col-2">
                                            <div class="form-group">
                                                <label class="form-label" for="proprice">Add Varients</label>
                                                <input type="button" class="btn btn-secondary" id="btnAdd" value="Add" />
                                            </div>

                                        </div>
                                    </div>


                                    <input type="button" class="btn btn-secondary" id="btnGet" value="Get Value" />
                                    <div class="row" id="newRow">

                                    </div>
                                    <script>

                                        $(document).ready(function () {

                                            $("#btnAdd").click(function () {

                                                $("#newRow").append('<div class="col-md-5 col-5" id="p"> <div class="form-group"> <label class="form-label" for="protitle">Product Title</label> <input type="text" class="form-control dt-full-name new" name="vTitle[]"  id="" placeholder="Varient Title" /> </div> </div> <div class="col-md-5 col-5" id="p"><div class="form-group"> <label class="form-label" for="proprice">Price</label> <input type="number" class="form-control dt-full-name" name="vPrice[]"  id="proprice" placeholder="Enter Price" /></div><div class="col-md-2 col-2" id="p"><div class="form-group"><input type="button" class="btn btn-danger" id="btnRemove" value="Remove" /> </div>');

                                                $("#btnRemove").click(function () {
                                                    $("#p").remove();
                                                });
                                            });

                                        });

                                    </script>





                                    @*$("#newRow").append('<div class="col-md-5 col-5"> <div class="form-group"> <label class="form-label" for="protitle">Product Title</label> <input type="text" class="form-control dt-full-name" id="protitle" placeholder="Enter Product Title" /> </div> </div> <div class="col-md-5 col-5">
        <div class="form-group"> <label class="form-label" for="proprice">Price</label> <input type="number" class="form-control dt-full-name" id="proprice" placeholder="Enter Price" /></div><div class="col-md-2 col-2">
            <div class="form-group"> <label class="form-label" for="proprice">Add Varients</label> <input type="button" class="btn btn-secondary" id="btnAdd" value="Add" /> </div>');

            });*@





                                    <div class="row mb-1">
                                        <div class="col-md-12 col-12">
                                            <label class="form-label" for="short-desc">Short Description</label>
                                            <textarea id="short-desc"></textarea>
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-md-12 col-12">
                                            <label class="form-label" for="short-desc">Full Description</label>
                                            <textarea id="full-desc"></textarea>
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-md-6 col-6">
                                            <div class="custom-control custom-checkbox mt-2">
                                                <input type="checkbox" class="custom-control-input" id="isfeatured">
                                                <label class="custom-control-label" style="user-select:none;" for="isfeatured">Is Featured</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="proqua">Stock Quantity</label>
                                                <input type="number" class="form-control dt-full-name" id="proqua" placeholder="Enter Stock Quantity" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="prodis">Discount</label>
                                                <input type="number" class="form-control dt-full-name" id="prodis" placeholder="Enter Discount" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-6">
                                            <div class="form-group">
                                                <label class="form-label" for="pro-distype">Discount Type</label>
                                                <select id="pro-distype" class="form-control">
                                                    <option value="null">Select Discount Type</option>
                                                    <option value="f">Fixed</option>
                                                    <option value="p">Percentage</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-md-12 col-12">
                                            <div class="form-group text-center" id="catList">
                                                <label class="d-block mb-1 text-lg-center">Categoires</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-md-12 col-12 text-center">
                                            <label class="btn btn-primary mr-75 mb-0" for="product-images">
                                                <span class="d-none d-sm-block">Choose Images</span>
                                                <input class="form-control" type="file" id="product-images" hidden accept="image/png, image/jpeg, image/jpg" multiple />
                                                <span class="d-block d-sm-none">
                                                    <i class="mr-0" data-feather="edit"></i>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <button align="center" id="btnSubmit" class="btn btn-primary mr-1">Submit</button>
                                        </div>
                                    </div>
                                </div>
                                    </div>
                                </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>

<div class="sidenav-overlay"></div>
<div class="drag-target"></div>

<script src="/js/AddProduct.js"></script>

