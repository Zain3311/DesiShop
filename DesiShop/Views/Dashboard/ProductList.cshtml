
@{
    ViewData["Title"] = "Product List";
    Layout = "/Views/Shared/_Dashboard_layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="/dashboard/app-assets/vendors/css/vendors.min.css">
<link rel="stylesheet" type="text/css" href="/dashboard/app-assets/vendors/css/extensions/nouislider.min.css">
<!-- END: Vendor CSS-->
<!-- BEGIN: Theme CSS-->
<link rel="stylesheet" type="text/css" href="/dashboard/app-assets/css/plugins/extensions/ext-component-sliders.css">
<link rel="stylesheet" type="text/css" href="/dashboard/app-assets/css/pages/app-ecommerce.css">
<link rel="stylesheet" type="text/css" href="/dashboard/app-assets/css/plugins/extensions/ext-component-toastr.css">
<!-- END: Page CSS-->
